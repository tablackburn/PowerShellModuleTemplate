{
  "name": "PowerShell Claude Code",
  "image": "mcr.microsoft.com/powershell:7-ubuntu-24.04",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": false,
      "installOhMyZsh": false,
      "username": "vscode",
      "userUid": "automatic",
      "userGid": "automatic"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/anthropics/devcontainer-features/claude-code:1": {}
  },
  "remoteUser": "vscode",
  "mounts": [
    "source=gh-cli-config,target=/home/vscode/.config/gh,type=volume",
    "source=${localEnv:USERPROFILE}/.claude,target=/home/vscode/.claude,type=bind,consistency=cached",
    "source=${localEnv:USERPROFILE}/.claude.json,target=/home/vscode/.claude.json,type=bind,consistency=cached"
  ],
  "postCreateCommand": "pwsh ./build.ps1 -Task Init -Bootstrap",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.powershell"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "pwsh",
        "powershell.codeFormatting.preset": "OTBS",
        "powershell.scriptAnalysis.settingsPath": "PSScriptAnalyzerSettings.psd1"
      }
    }
  }
}
